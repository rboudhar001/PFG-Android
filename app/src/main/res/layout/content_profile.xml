<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true" >

    <!-- Resto de la interfaz de usuario -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/relative_picture_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circle_image_profile"
                        android:layout_width="@dimen/circle_image_profile"
                        android:layout_height="@dimen/circle_image_profile"
                        android:src="@drawable/com_facebook_profile_picture_blank_square"
                        android:clickable="true"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:id="@+id/view_separator_1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" >
                </View>

                <LinearLayout
                    android:id="@+id/linear_info_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:id="@+id/text_about_me"
                        android:text="@string/text_about_me"
                        android:textSize="@dimen/text_about_me"
                        android:textColor="@color/GRIS_1"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:editable="false"
                        android:layout_gravity="center_horizontal|top"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:id="@+id/text_name"
                                android:text="@string/text_name"
                                android:textSize="@dimen/text_characteristics"
                                android:textColor="@color/GRIS_1"
                                android:editable="false" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:id="@+id/text_gener"
                                android:text="@string/text_gender"
                                android:textSize="@dimen/text_characteristics"
                                android:textColor="@color/GRIS_1"
                                android:editable="false"
                                android:layout_marginTop="6dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:id="@+id/text_birthday"
                                android:text="@string/text_birthday"
                                android:textSize="@dimen/text_characteristics"
                                android:textColor="@color/GRIS_1"
                                android:editable="false"
                                android:layout_marginTop="6dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:id="@+id/text_email"
                                android:text="@string/text_email"
                                android:textSize="@dimen/text_characteristics"
                                android:textColor="@color/GRIS_1"
                                android:editable="false"
                                android:layout_marginTop="6dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:id="@+id/text_edit_name"
                                android:text="NOMBRE"
                                android:textSize="@dimen/text_characteristics"
                                android:textColor="@color/ROJO"
                                android:editable="true"
                                android:gravity="end" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:id="@+id/text_edit_gender"
                                android:text="GENERO"
                                android:textSize="@dimen/text_characteristics"
                                android:textColor="@color/ROJO"
                                android:editable="true"
                                android:layout_marginTop="6dp"
                                android:gravity="end" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:id="@+id/text_edit_birthday"
                                android:text="CUMPLEAÃ‘OS"
                                android:textSize="@dimen/text_characteristics"
                                android:textColor="@color/ROJO"
                                android:editable="true"
                                android:layout_marginTop="6dp"
                                android:gravity="end" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:id="@+id/text_edit_email"
                                android:text="EMAIL"
                                android:textSize="@dimen/text_characteristics"
                                android:textColor="@color/ROJO"
                                android:editable="true"
                                android:layout_marginTop="6dp"
                                android:gravity="end" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:id="@+id/view_separator_2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="30dp" >
                </View>

                <LinearLayout
                    android:id="@+id/linear_change_password_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/button_change_password"
                        android:text="@string/text_change_password"
                        android:background="@color/AZUL_CLARO_APP"
                        android:textColor="@color/BLANCO"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</LinearLayout>